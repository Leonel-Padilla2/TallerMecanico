
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Insertar" method="get">
    <input class="btn btn-outline-dark" type="submit" value="Agregar Registro" />

    <div class="row">
        <div class="danger">
            @if (TempData["mensaje"] != null)
            {
                <div class="alert alert-success alert-dismissible" role="alert">
                    <p> @TempData["mensaje"] </p>
                    <button class="close" data-dismiss="alert" aria-label="close">
                        <span aria-hidden="true"> &times; </span>
                    </button>
                </div>
            }
        </div>
    </div>
</form>
@if (Model.Count > 0)
{
    <div class="Scroll">
        <table class="table table-striped table-hover table-bordered">
            <thead>
                <tr>
                    <th scope="col"> Id Usuario </th>
                    <th scope="col"> Nombre </th>
                    <th scope="col"> Apellido </th>
                    <th scope="col"> Correo </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @item.UsuarioId </td>
                        <td> @item.Nombre </td>
                        <td> @item.Apellido </td>
                        <td> @item.Correo </td>

                        <td>
                            @Html.ActionLink("Editar", "Editar", "Usuario", new { @Id = item.UsuarioId }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Eliminar", "Eliminar", "Usuario", new { @Id = item.UsuarioId }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
